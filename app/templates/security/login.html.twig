{% extends 'base.html.twig' %} {% block title %}Log in!{% endblock %} {% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger my-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% if app.user %}
        <div class="h3 text-center my-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% else %}
        <div class="card bg-light my-3 p-0 col-md-6 offset-md-3" style="color:black;">
                <h3 class="text-center card-header pl-0 pr-0">Sign in</h3>
                <div class="card-body p-3">
                    <div class="card-text">
                        <div class="row pl-5 pr-5">
                            <div class="form-group col-12 pl-0">
                                <label for="inputEmail">Email</label>
                                
                                <div>
                                    <input type="email" value="{{ last_username }}" id="inputEmail" name="email" required="required" placeholder="email" class="form-control" autofocus/>
                                </div>
                            </div>
                        </div>
                        <div class="row pl-5 pr-5">
                            <div class="form-group col-12 pl-0">
                                <label for="inputPassword">Password</label>
                                
                                <div>
                                    <input type="password" id="inputPassword" name="password" required="required" placeholder="password" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. See https://symfony.com/doc/current/security/remember_me.html#}
                        <div class="row pl-5 pr-5">
                            <div class="checkbox mb-3">
                                <p>
                                    <label>
                                        <input type="checkbox" name="_remember_me" />
                                        <span>Remember me</span>
                                    </label>
                                </p>
                                <a href="{{ path('app_forgot_password_request')}}">Forgot Password ?</a>
                            </div>
                        </div>
                        <div class="row mt-4 mb-5 d-flex justify-content-center">
                            <button class="btn btn-info btn-lg" type="submit">sign in</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    {% endif %}

{% endblock %}