{% extends 'base.html.twig' %}

{% block title %}Professor index{% endblock %}

{% block body %}
    <h1 class="my-5 text-center">Professors</h1>

    <div class="row">
        <div class="col-md-10 offset-md-1 col-sm-12">
            <a href="{{ path('admin_professor_new')}}" class="btn btn-info mb-3"professor_>Add new</a>
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        {% if user.subject %}
                            <td>{{ user.subject.name }}</td>
                        {% else %}
                            <td>No subject has been assigned</td>
                        {% endif %}
                        <td>
                            <a href="{{ path('admin_professor_show', {'id': user.id}) }}" class="btn btn-info">Show</a>
                            <a href="{{ path('admin_professor_edit', {'id': user.id}) }}" class="btn btn-info">Edit</a>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#example{{user.id}}">
                            Add to Class
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="example{{user.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">List Classes</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <ul class="list-group">
                                {% for group in groups %}
                                    {% if not containProfessor(user.id,group.groupProfessors) %} 
                                        <li class="list-group-item">
                                            <a href="{{ path('admin_professor_group_new', {'professor':user.id ,'group': group.id}) }}" class="btn btn-info">{{ group.name }} </a>
                                        </li>
                                    {% endif %}
                                {% else %}
                                        <li class="list-group-item">No Group Found</li>
                                {% endfor %}
                                    </ul>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                                </div>
                            </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">No Records Found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
