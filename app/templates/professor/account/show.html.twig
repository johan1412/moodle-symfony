        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">Profile</h1>

            <img src="{{asset('build/images/Moodle.png')}}" alt="{{ app.user.fullName }}'s Avatar" class="shadow rounded-circle w-50">

            <p class="mt-3 lead">{{ app.user.email }}</p>

