{% extends 'base.html.twig' %}

{% block title %}Exercise{% endblock %}

{% block body %}
    <h1 class="my-5 text-center">Exercise</h1>

    <div class="row">
        <div class="col-md-2">
            <a href="{{ path('professor_exercise_index') }}" class="btn btn-secondary"><< Back</a>
        </div>
        <div class="col-md-8">
            <div class="row mb-5">
                <a href="{{ path('professor_exercise_edit', {'id': exercise.id}) }}" class="btn btn-info mx-3">Edit</a>
                {{ include('professor/exercise/_delete_form.html.twig') }}
            </div>
            <table class="table table-striped table-bordered">
                <tbody>
                    
                    <tr>
                        <th>Name</th>
                        <td>{{ exercise.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ exercise.description }}</td>
                    </tr>
                    <tr>
                        <th>Subject</th>
                        <td>{{ exercise.subject.name }}</td>
                    </tr>
                </tbody>
            </table>
            <h2>Questions :</h2>
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Difficulty</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for question in exercise.questions %}
                    <tr>
                        <td>{{ question.id }}</td>
                        <td>{{ question.name }}</td>
                        <td>{{ question.description }}</td>
                        <td>{{ question.difficulty }}</td>
                        <td>
                            <a href="{{ path('professor_question_show', {'id': question.id}) }}" class="btn btn-info">Show</a>
                            <a href="{{ path('professor_question_edit', {'id': question.id, 'exercise':question.exercises.id}) }}" class="btn btn-info">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
        </div>
    </div>

{% endblock %}
